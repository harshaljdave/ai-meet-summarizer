{
  "manifest_version": 3,
  "name": "AI Meeting Caption Scraper",
  "version": "1.0",
  "description": "Scrapes live captions from Google Meet for AI analysis.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://meet.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"]
    }
  ]
}